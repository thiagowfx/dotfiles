[push]
	default = simple
[user]
	name = Thiago Perrotta
	email = perrotta.thiago@poli.ufrj.br
[credential]
	helper = store
[alias]
	d = diff
	dc = diff --cached
    l = commit -a -m
	p = push
	st = status
[core]
	autocrlf = input
[color]
	diff = auto
	status = auto
	branch = auto
	grep = auto
	interactive = auto
	showbranch = auto
	ui = auto
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
[sendemail]
	smtpserver = /usr/bin/sendmail
