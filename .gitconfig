[push]
	default = simple
[user]
	name = Thiago Perrotta
	email = perrotta.thiago@poli.ufrj.br
[credential]
	helper = store
[alias]
	d = diff
	l = commit -a -m "update"
	p = push
	st = status
    # TODO: https://github.com/jfrazelle/dotfiles/blob/master/.gitconfig#L52
[core]
	autocrlf = input
[color]
	diff = auto
	status = auto
	branch = auto
	grep = auto
	interactive = auto
	showbranch = auto
	ui = auto
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
[sendemail]
	smtpserver = /usr/bin/sendmail
