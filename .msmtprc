# Set default values for all following accounts.
defaults
tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile ~/.cache/.msmtp.log

# PoliMail
account polimail
host smtp.gmail.com
from perrotta.thiago@poli.ufrj.br
auth on
user perrotta.thiago@poli.ufrj.br
passwordeval "gpg --quiet --for-your-eyes-only --no-tty --decrypt ~/.msmtp.polimail.gpg"

# Set a default account
account default : polimail
